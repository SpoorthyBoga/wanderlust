<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  .filter-container{
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
  -ms-overflow-style: none;
  scrollbar-width: none;
  }
  .filter-container::-webkit-scrollbar {
  display: none;
}

  .filter{
    text-align: center;
    margin-right: 2.5rem;
    margin-top: 0.8rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
  }

  .tax-switch{
    margin-left: auto;
    margin-top: 0.5rem;
    margin-bottom: 2rem;
    border: 2px solid black;
    text-align: center;
    padding: 0.5rem;
    padding-right:1.5rem ;
    border-radius: 20px;
    font-size: 1rem;
  }

  .tax{
    display:none;
  }
</style>



<% layout("/layouts/boilerplate") -%>
<body>

  <div class="filters row" id="filters">
    <div class="filter-container col-9">
          <div class="filter">
      <div>  <i class="fa-solid fa-umbrella-beach"></i> </div>
      <p>Beachy</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div> 
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-hiking"></i></div> 
      <p>Hiking</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div> 
      <p>Snowy</p>
     </div>
    <div class="filter">  
      <div><i class="fa-solid fa-umbrella"></i></div>
      <p>Hillstation</p>
    </div>
    <div class="filter"> 
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter"> 
      <div> <i class="fa-solid fa-cow"></i></div>
      <p>Farmhouse</p>
    </div>
    <div class="filter"> 
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <p>Swimmingpool</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Tropical</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Cruise</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-champagne-glasses"></i></div>
      <p>Partying</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>SmartCities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-building-columns"></i></div>
      <p>Monuments</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-camera"></i></div>
      <p>PicturePerfect</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Tropical</p>
    </div>
    </div>
    <div class="tax-switch col-2">
      <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
       <label class="form-check-label d-none d-lg-inline" for="switchCheckDefault">Price-After-Taxes</label>
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
     <a href="/listing/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">

          <img src="<%= listing.image.url %>" class="card-img-top" alt="listingimage" style="height: 20rem;">

           <div class="card-img-overlay"></div>

           <div class="card-body">
            <p class="card-text">
                <b> <%= listing.title%> </b>
                <br>
                 &#8377;<%=listing.price.toLocaleString("en-IN")%> / night
                 &nbsp;&nbsp;  <b><i class="tax">+18% GST</i></b>
            </p>
           </div>

        </div>
     </a>
    <%}%>
  </div>
  

  <script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline"; // âœ… Corrected here
      } else {
        info.style.display = "none";
      }
    }
  });
</script>

</body>
 